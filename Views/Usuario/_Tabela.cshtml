@using CodeTest_FRONTEND.Models.Usuario
@model List<UsuarioViewModel>

<h2>Lista de Usuários - Partial</h2>
<div class="table-responsive">
    <table id="tabelaUsuarios" class="table table-bordered table-hover align-middle text-center">
        <thead class="table-heading small">
            <tr>
                <th scope="col">Nome</th>
                <th scope="col">E-mail</th>
                <th scope="col">Permissão</th>
                <th scope="col">Data Cadastro</th>
                <th scope="col">Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var usuario in Model)
            {
                <tr class="d-sm-table-row small">
                    <td>@usuario.Nome </td>
                    <td>@usuario.Email</td>
                    <td>@usuario.Role</td>
                    <td>@usuario.DataCriacao?.ToString("dd/MM/yyyy")</td>
                    <td class="text-nowrap">
                        <!-- Botão Visualizar -->
                        <a class="btn btn-outline-primary btn-sm" asp-controller="Usuario" asp-action="Detalhes" asp-route-id="@usuario.Id"><i class="bi bi-eye"></i></a>
                        <!-- Botão Editar -->
                        <a class="btn btn-outline-warning btn-sm" asp-controller="Usuario" asp-action="Editar" asp-route-id="@usuario.Id"><i class="bi bi-pencil"></i></a>
                        <!-- Botão Excluir -->
                        <a class="btn btn-outline-danger btn-sm" asp-controller="Usuario" asp-action="Excluir" asp-route-id="@usuario.Id"><i class="bi bi-trash3"></i></a>

                    </td>
                    @* <td data-nascimento="@user.DataNascimento">@user.DataNascimentoFormatada</td>
                                <td class="idade"></td>
                                <td>
                                    <span class="badge @(user.EmailCorporativo ? "bg-success" : "bg-danger")">
                                @(user.EmailCorporativo ? "Sim" : "Não")
                                    </span>
                       </td> *@
                </tr>
            }
        </tbody>
    </table>
</div>
