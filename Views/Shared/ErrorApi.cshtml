@model string
@{
    ViewBag.Title = "Erro na Conexão";
}

<div class="d-flex align-items-center justify-content-center min-vh-100">
    <div class="card shadow-lg border-0 rounded-4" style="max-width: 500px;">
        <div class="card-body text-center p-5">
            <!-- Ícone de erro -->
            <div class="mb-4">
                <svg xmlns="http://www.w3.org/2000/svg" width="80" height="80" fill="#dc3545" class="bi bi-wifi-off" viewBox="0 0 16 16">
                    <path d="M10.706 3.294a8 8 0 0 0-9.366 1.102.75.75 0 1 1-1.06-1.06A9.5 9.5 0 0 1 10.706 3.294z" />
                    <path d="M4.646 6.646a5.5 5.5 0 0 1 6.708-.708.75.75 0 1 1-.832 1.248 4 4 0 0 0-4.864.516.75.75 0 1 1-1.012-1.056z" />
                    <path d="M7.646 9.646a2.5 2.5 0 0 1 3.39-.248.75.75 0 0 1-.832 1.248 1 1 0 0 0-1.356-.516.75.75 0 0 1-1.202-.484z" />
                    <path d="M2.354 1.646a.5.5 0 0 1 .708 0l12.292 12.292a.5.5 0 0 1-.708.708l-1.372-1.372A8.5 8.5 0 0 1 1.646 2.354L.354 1.646a.5.5 0 0 1 .708-.708l1.292 1.292z" />
                </svg>
            </div>

            <!-- Título -->
            <h2 class="fw-bold text-danger mb-3">Ops! Não foi possível conectar</h2>

            <!-- Mensagem de erro -->
            <p class="text-muted mb-4">@Model</p>

            <!-- Dica -->
            <div class="alert alert-light border rounded-3 shadow-sm">
                <small class="text-secondary">
                    <i class="bi bi-info-circle"></i> Verifique se a API está rodando e tente novamente.
                </small>
            </div>

            <!-- Botão -->
            <a class="btn btn-danger btn-lg rounded-pill px-4 mt-3 shadow" href="@Url.Action("Index", "Home")">
                <i class="bi bi-arrow-left"></i> Voltar ao início
            </a>
        </div>
    </div>
</div>

