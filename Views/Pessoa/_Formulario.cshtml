@using CodeTest_FRONTEND.Models.Pessoa
@model PessoaViewModel

<form asp-action="@ViewData["FormAction"]" method="post" class="d-flex justify-content-center">
    <div class="row w-50">
        <div class="col-md-12">
            <input type="hidden" asp-for="Id" />
            <div class="mb-3">
                <label asp-for="Nome" class="form-label"></label>
                <input asp-for="Nome" class="form-control" />
