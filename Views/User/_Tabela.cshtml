@using CodeTest_FRONTEND.ViewModel
@model List<UserViewModel>

<h2>Lista de Usuários - Partial</h2>

<div class="table-responsive">
    <table id="tabelaUsuarios" class="table table-bordered table-hover align-middle text-center" ">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Email</th>
                <th>Data Nacimento</th>
                <th>Idade</th>
                <th>Email Corporativo ?</th>
            </tr>
        </thead>
        <tbody>
    @foreach (var user in Model)
    {
                <tr>
                    <td>@user.NomeCompleto </td>
                    <td>@user.Email</td>
                    <td data-nascimento="@user.DataNascimento">@user.DataNascimentoFormatada</td>
                    <td class="idade"></td>
                    <td>
                        <span class="badge @(user.EmailCorporativo ? "bg-success" : "bg-danger")">
                    @(user.EmailCorporativo ? "Sim" : "Não")
                        </span>
                    </td>
                </tr>
    }
        </tbody>
    </table>
</div>
